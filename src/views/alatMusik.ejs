<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Alat Musik</title>
    <!-- link bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />

    <!-- link font-awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      rel="stylesheet"
    />

    <!-- link css -->
    <link rel="stylesheet" href="/css/alat-musik.css" />
  </head>
  <body>
    <div class="container mt-5">
      <a href="/" class="btn btn-secondary mb-3">
        <i class="fa fa-arrow-left"></i> Kembali ke Dashboard
      </a>

      <h2 class="mb-4 text-center">Tambah Alat</h2>
      <form
        class="contener"
        action="/alatMusik"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            name="nama"
            id="nama"
            class="form-control"
            placeholder="Masukan Nama Alat Musik"
            required
          />
        </div>

        <div class="mb-3">
          <label for="deskripsi" class="form-label">Deskripsi</label>
          <input
            name="deskripsi"
            id="deskripsi"
            class="form-control"
            placeholder="Masukan Deskripsi"
            required
          />
        </div>

        <div class="mb-3">
          <label for="gambar" class="form-label">Unggah Gambar</label>
          <input
            name="gambar"
            id="gambar"
            type="file"
            accept="image/*"
            class="form-control"
          />
          <small class="form-text text-warning">
            <i class="bi bi-exclamation-circle-fill"></i>
            Maksimal 30MB • Format: JPG, PNG, GIF
          </small>
        </div>

        <div class="mb-3">
          <label for="suara" class="form-label">Unggah Suara</label>
          <input
            name="suara"
            id="suara"
            type="file"
            accept=".mp3,.wav,.ogg,.mpeg,.m4a"
            class="form-control"
          />
          <small class="form-text text-warning">
            <i class="bi bi-exclamation-circle-fill"></i>
            Maksimal 30MB • Format: MP3, WAV, OGG, M4A
          </small>
        </div>

        <div class="mb-3">
          <label for="video" class="form-label">Unggah Video</label>
          <input
            name="video"
            id="video"
            type="file"
            accept="video/*"
            class="form-control"
          />
          <small class="form-text text-warning">
            <i class="bi bi-exclamation-circle-fill"></i>
            Maksimal 100MB • Format: MP4, AVI, MOV
          </small>
        </div>

        <button class="btn btn-primary" type="submit">Tambah</button>
      </form>

      <!-- <h2 class="mb-4 text-center">Daftar Alat Musik</h2> -->

      <div class="container my-4">
        <h2 class="text-center mb-3 mt-5">Daftar Alat Musik</h2>
        <div class="table-responsive">
          <table class="table table-bordered table-striped">
            <thead class="table-dark">
              <tr>
                <th>Gambar</th>
                <th>Suara</th>
                <th>vidio</th>
                <th>Nama</th>
                <th>Deskripsi</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(function(item){ %>
              <tr>
                <td>
                  <img
                    src="<%= item.gambar %>"
                    alt=""
                    style="width: 100px; height: auto"
                  />
                </td>
                <td><audio src="<%= item.suara %>" controls></audio></td>
                <td>
                  <video
                    src="<%= item.video %>"
                    style="width: 200px; height: auto"
                    controls
                  ></video>
                </td>
                <td><%= item.nama %></td>
                <td><%= item.deskripsi %></td>
                <td class="d-flex flex-column flex-md-row gap-2">
                  <!-- Tombol Edit -->
                  <button
                    class="btn btn-warning btn-sm"
                    data-bs-toggle="modal"
                    data-bs-target="#edit<%= item.id %>"
                  >
                    Edit
                  </button>

                  <form
                    id="formHapus-<%= item.id %>"
                    action="/alatMusik/<%= item.id %>?_method=DELETE"
                    method="POST"
                    style="display: inline"
                  >
                    <button
                      class="btn btn-danger btn-sm"
                      type="button"
                      onclick="konfirmasiHapus('<%= item.id %>')"
                    >
                      Hapus
                    </button>
                  </form>
                </td>
              </tr>

              <!-- Modal Edit -->
              <div
                class="modal fade"
                id="edit<%= item.id %>"
                tabindex="-1"
                aria-hidden="true"
              >
                <div class="modal-dialog">
                  <div class="modal-content p-4">
                    <h5>Edit Alat</h5>
                    <form
                      class="contener"
                      action="/alatMusik/<%= item.id %>?_method=PUT"
                      method="POST"
                      enctype="multipart/form-data"
                    >
                      <!-- Simpan path yang lama -->
                      <input
                        type="hidden"
                        name="gambar_lama"
                        value="<%= item.gambar %>"
                      />
                      <input
                        type="hidden"
                        name="video_lama"
                        value="<%= item.video %>"
                      />
                      <input
                        type="hidden"
                        name="suara_lama"
                        value="<%= item.suara %>"
                      />

                      <div class="mb-3">
                        <label for="nama" class="form-label">Nama</label>
                        <input
                          name="nama"
                          id="nama"
                          class="form-control"
                          value="<%= item.nama %>"
                          required
                        />
                      </div>

                      <div class="mb-3">
                        <label for="deskripsi" class="form-label"
                          >Deskripsi</label
                        >
                        <input
                          name="deskripsi"
                          id="deskripsi"
                          class="form-control"
                          value="<%= item.deskripsi %>"
                          required
                        />
                      </div>

                      <div class="mb-3">
                        <label for="gambar" class="form-label"
                          >Ganti Gambar (optional)</label
                        >
                        <input
                          name="gambar"
                          id="gambar"
                          type="file"
                          accept="image/*"
                          class="form-control"
                        />
                      </div>

                      <div class="mb-3">
                        <label for="suara" class="form-label"
                          >Ganti Suara (optional)</label
                        >
                        <input
                          name="suara"
                          id="suara"
                          type="file"
                          accept=".mp3,.wav,.ogg,.mpeg,.m4a"
                          class="form-control"
                        />
                      </div>
                      <div class="mb-3">
                        <label for="video" class="form-label"
                          >Ganti Video (optional)</label
                        >
                        <input
                          name="video"
                          id="video"
                          type="file"
                          accept="video/*"
                          class="form-control"
                        />
                      </div>

                      <button class="btn btn-primary" type="submit">
                        Simpan Perubahan
                      </button>
                    </form>
                  </div>
                </div>
              </div>

              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Fungsi konfirmasi hapus harus SELALU tersedia -->
    <script>
      function konfirmasiHapus(id) {
        Swal.fire({
          title: "Yakin ingin menghapus?",
          text: "Data yang dihapus tidak bisa dikembalikan!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#d33",
          cancelButtonColor: "#6c757d",
          confirmButtonText: "Ya, hapus!",
          cancelButtonText: "Batal",
        }).then((result) => {
          if (result.isConfirmed) {
            document.getElementById("formHapus-" + id).submit();
          }
        });
      }
    </script>

    <!-- Flash message swal -->
    <% if ( typeof swalMessage !== "undefined" && swalMessage.length > 0 &&
    typeof swalIcon !== "undefined" && swalIcon.length > 0 ) { %>
    <script>
      Swal.fire({
        icon: "<%= swalIcon[0] %>",
        title:
          {
            success: "Berhasil!",
            error: "Gagal!",
            warning: "Peringatan!",
            info: "Informasi",
          }["<%= swalIcon[0] %>"] || "Pesan",
        text: "<%= swalMessage[0] %>",
        confirmButtonColor: "#6c5ce7",
        confirmButtonText: "OK",
        allowOutsideClick: false,
        allowEscapeKey: false,
      });
    </script>
    <% } %>
  </body>
</html>
