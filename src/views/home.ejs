<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dashboard Admin</title>

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome 6 -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/home.css" />
    <!-- Google Font Amiri for Arabic -->
    <link
      href="https://fonts.googleapis.com/css2?family=Amiri&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
      <div class="container">
        <a
          class="navbar-brand fw-bold fs-4 d-flex align-items-center"
          href="<%= url %>"
        >
          Tenun Lombok Timur
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto align-items-center">
            <li class="nav-item">
              <a class="nav-link active" href="<%= url %>">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= url %>pengerajin">Pengerajin</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= url %>motif">Motif</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= url %>produk">Produk</a>
            </li>
            <li class="nav-item">
              <a
                href="<%= url %>login/logout"
                class="nav-link text-warning"
                title="Logout"
              >
                <i class="fa-solid fa-arrow-right-from-bracket"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="container mt-5 pt-5">
      <div class="text-center mb-5">
        <h1 class="welcome-text display-5">WELCOME <%= userName %>!</h1>
        <p class="fs-5 text-secondary">Selamat datang di Dashboard Admin</p>
      </div>

      <div class="row justify-content-center g-4">
        <!-- Card Jumlah Pengerajin -->
        <div class="col-md-4 col-sm-6">
          <div class="card glow-card shadow-sm border-0 rounded-4 mb-4">
            <div class="card-body text-center py-4">
              <div class="mb-3"></div>
              <h5 class="card-title fw-bold">Jumlah Pengerajin Tenun</h5>
              <p class="card-text display-6 fw-semibold text-dark">
                <%= totalPengerajin %>
              </p>
              <a
                href="<%= url %>pengerajin"
                class="btn btn-outline-primary mt-3"
              >
                Lihat Detail
              </a>
            </div>
          </div>

          <!-- Card Jumlah Motif -->
          <div class="card glow-card shadow-sm border-0 rounded-4">
            <div class="card-body text-center py-4">
              <div class="mb-3"></div>
              <h5 class="card-title fw-bold">Jumlah Motif Tenun</h5>
              <p class="card-text display-6 fw-semibold text-dark">
                <%= totalMotif %>
              </p>
              <a href="<%= url %>motif" class="btn btn-outline-primary mt-3">
                Lihat Detail
              </a>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
